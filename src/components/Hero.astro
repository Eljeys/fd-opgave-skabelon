---
import Services from "./Services.astro";
import Button from "./Button.astro";
---

<section class="hero">
  <!-- Markup her -->
   <img src="/public/images/index_hero.png" alt="girl looking directly in the camera">
   <article>
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <Button class="btnBg" title="Book a Meeting" />
   </article>
<section class="service_card">
  <Services />
</section>
</section>

<style>
  /* Styles her */
  .service_card{
    display: grid;
    grid-template-columns: subgrid;
    border: solid red;
    z-index: 3;
  }
  .btnBg{
    background-color: var( --secondary-2);
    border:solid #EBEBEB;
  }
 
  
  .hero{
    display: grid;
    grid-template-columns: 1fr 1fr;
    color: var(  --secondary-2);
    background-color: var(--primary-3);

  }
</style>
